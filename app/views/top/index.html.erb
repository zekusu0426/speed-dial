<!-- 新規作成ダイアログ -->
<div id="modaltest" class="modal fade">  <!-- Modal本体 -->
    <div class="modal-dialog"> <!-- Modalダイアログ部分 -->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">お気に入り登録</h4>
            </div>
            <div class="modal-body">
              <div class="form-horizontal" role="form">
                <%= form_for(current_user.bookmarks.new) do |f| %>
                <div class="form-group">
                  <%= f.label :"Site_name", :class => "col-sm-3 control-label" %>
                  <div class="col-sm-7"><%= f.text_field :title, :class => "form-control" %></div>
                </div>
                <div class="form-group">
                  <%= f.label :"URL", :class => "col-sm-3 control-label" %>
                  <div class="col-sm-7"><%= f.url_field :url, :class => "form-control" %></div>
                </div>
                <div class="form-group">
                  <%= f.label :"Image_URL", :class => "col-sm-3 control-label" %>
                  <div class="col-sm-7"><%= f.text_field :image, :class => "form-control" %></div>
                </div>
                <div class="form-group">
                  <div class="col-sm-2 col-sm-offset-3">
                    <%= f.submit "save", :input_html => {"data-dismiss" => "modal", "aria-hidden" => "true"}, :class => "btn btn-primary" %>
                  </div>
                  <div class="col-sm-2">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">close</button>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
        </div>
    </div>
</div>