<h1>Bookmark</h1>
<p id="notice"><%= notice %></p>
<!-- 新規作成 -->
<a href="#modaltest" role="button" class="btn" data-toggle="modal">新規登録</a>


<% if user_signed_in? %>
  <p><%= link_to('ログアウト', destroy_user_session_path, method: :delete) %></p>
<% else %>
  <%= link_to('ログイン', new_user_session_path) %>
<% end %>

<div class="row">
  <% @bookmarks.each do |bookmark| %>
  <div class="col-xs-6 col-sm-4 col-md-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag bookmark.image, width: 120 %>
      </div>
      <div class="panel-footer">
        <a href="<%= bookmark.url %>" target="_blank"><h4><%= bookmark.title %></h4>
        </a>
        <p><%= link_to('削除', bookmark_path(bookmark), method: :delete) %></p>
      </div>
    </div>
  </div>
  <% end %>
  <!-- Example -->
  <div class="col-xs-6 col-sm-4 col-md-3">
    <div class="panel panel-default">
      <div class="panel-body">
          <%= image_tag asset_path('/assets/sample.png'), :class => "card-img-top" ,width: 120%>
      </div>
      <div class="panel-footer">
        <a href="#" target="_blank"><h4>Example</h4>
        </a>
      </div>
    </div>
  </div>
</div>

